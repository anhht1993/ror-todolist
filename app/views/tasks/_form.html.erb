<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :task_name %>
  </div>

  <div class="field">
    <%= form.label :start %>
    <%= form.text_field :start, id: :task_start, class: "datepicker" %>
  </div>

  <div class="field">
    <%= form.label :due %>
    <%= form.text_field :due, id: :task_due, class: "datepicker" %>
    
  </div>

  <div class="field">
    <%= form.label :is_finish %>
    <%= form.check_box :is_finish, id: :task_is_finish %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

